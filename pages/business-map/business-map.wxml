<!--pages/business-map/business-map.wxml-->
<map
  id="map"
  subkey="54SBZ-RXSLQ-3F557-GLDHZ-Z7UKQ-DJBWU"
  longitude="{{lng}}"
  latitude="{{lat}}"
  scale="13"
  controls="{{controls}}"
  circles='{{circles}}'
  bindcontroltap="controltap"
  markers="{{markers}}"
  bindmarkertap="markertap"
  polyline="{{polyline}}"
  bindregionchange="regionchange"
  show-location
  style="width: 100%; height: 100vh;"
>
<cover-view style='position:fixed;width: 100%; height: 10vh;bottom:0; background-color:white'>
      <cover-view class="area-item">
        <cover-view class='area-item-column'>
          <cover-view class='h3'>{{selectedItem.city}} {{selectedItem.area}}</cover-view>
          <cover-view>店铺{{selectedItem.shopCount}}家；月均销售{{selectedItem.avgSalesCount}}</cover-view>
        </cover-view>
        <cover-view class='area-item-column'>
          <cover-view class='h3'>80%</cover-view>
          <cover-view>蓝海指数</cover-view>
        </cover-view>
        <cover-view class='area-item-column'>
          <cover-view class='h3'>{{selectedItem.salesCount}}</cover-view>
          <cover-view>月销量</cover-view>
        </cover-view>
      </cover-view>
</cover-view>
</map>

