/* pages/store/detail/index.wxss */
page{
  padding: 0 20rpx;
  width: auto;
}
.title{
  font-size: 36rpx;
  color: #333;
  padding: 15px 0;
}
.price{
  font-size: 36rpx;
  color: #e55d23;
  padding: 5rpx 0 30rpx 0;
}
.fulltag{
  justify-content: space-between;
  font-size: 26rpx;
  color: #a5a5a5;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eeeeee;
}
.buyNum{
  background-color:#ffffff;
  padding: 0 20rpx;
  border-bottom: 1px solid #eeeeee;
  font-size: 28rpx;
  line-height: 66rpx;
  align-items: center;
  padding-bottom: 20rpx;
}
.buyNum .left{
  margin-right: 50rpx;
}
.buyNum .flex{
  align-items: center;
  border: 1px solid #9a9a9a;
  border-radius: 10rpx;
  font-size: 36rpx
}
.buyNum .flex .add{
 width: 60rpx;
 text-align: center;
}
.buyNum .flex input{
  text-align: center;
  height: 66rpx;
  width: 120rpx;
  font-size: 28rpx;
  border-right: 1px solid #9a9a9a;
  border-left: 1px solid #9a9a9a
}
.fixedP{
  position: fixed;
  bottom: 30rpx;
  left: 0;
  /* left: 50%; */
  width: 100%;
  /* font-size: 34rpx;
  text-align: center;
