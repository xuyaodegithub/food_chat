visibility: hidden
}
.top{
  background-color: #ffffff;
  position: relative;
  padding:20rpx 30rpx 30rpx 30rpx;
  font-size: 42rpx;
  color: #333;
  line-height: 60rpx;
  border-bottom: 1px solid #9a9a9a;
}
.top .posi{
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
.top image{
  margin-top: -50rpx;
  width: 180rpx;
  height: 180rpx;
  margin-right: 40rpx;
}
.top .price2{
  color: #e55d23;
  margin-bottom: 20rpx;
}
.top .store{
  font-size: 28rpx;
  color: #a5a5a5
}
.nallmess{
  padding:30rpx 30rpx 10rpx 30rpx;
  color: #333;
}
.oneNall{
  margin-bottom: 20rpx;
}
.nallmess .naTitle{
  font-size: 32rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}
.nallmess .flex{
  align-items: center;
  flex-wrap: wrap;
  font-size: 24rpx;
  padding-left: 20rpx;
}
.nallmess .flex view{
  padding: 6rpx 15rpx;
  border: 1px solid #a5a5a5;
  text-align: center;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.nallmess .flex .active{
  color:#F23F8A;
  border-color: #F23F8A;
}
.content{
  background-color:#ffffff;
  max-height: 600rpx;
  overflow-y:auto; 
}
.celectBtn{
  width: 95%;
  margin: 0 auto;
