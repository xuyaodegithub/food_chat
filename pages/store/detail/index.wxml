<!--商品详情-->
<swipers banner="{{benners}}"></swipers>
<view>
    <view class="title over">{{oneItem.title}}</view>
    <view class="price">￥{{oneItem.price}}</view>
    <view class="flex fulltag">
      <text>{{oneItem.FreeShipping ? '包邮' : '不包邮'}}</text>
      <text>销量  {{oneItem.SalesVolume}}</text>
      <text>{{oneItem.place}}</text>
    </view> 
</view>
<view class="fixedP">
  <view class="buybtn" bindtap='goBuy'>立即购买</view>
</view>
<!-- 购买弹框 -->
<van-popup show="{{showPopup}}" position="bottom" close-on-click-overlay custom-style="background-color:rgba(0,0,0,0)">
<view class="sloat"> </view>
    <view class="flex top"> 
        <van-icon name="cross" class="posi" bindtap='closeP'></van-icon>
          <image src="{{oneItem.img}}"></image>
          <view>
            <view class="price2">￥{{oneItem.price}}</view>
            <view class="store">库存{{oneItem.store}}</view>
          </view>
    </view>
    <!-- 规格 -->
    <view class="content">
      <view class="nallmess">
          <view wx:for="{{nomalMess}}" wx:key="{{index}}" class="oneNall">
              <view class="naTitle">{{item.title}}</view>
              <view class="flex">
                  <view wx:for="{{item.mess}}" wx:for-item="itemson" wx:for-index="indexson" data-index="{{index}}"  wx:key="{{indexson}}" data-indexson="{{indexson}}"  data-ids="{{itemson.nallid}}" class="{{itemson.selected ? 'active' : ''}}" bindtap='selectNomall'>{{itemson.title}}</view>
              </view>
          </view>
      </view>
      <!-- 数量 -->
      <view class="buyNum  flex">
          <view class="left">购买数量</view>
          <view class="flex">
              <view class="add" bindtap='chengnum' data-type="1">-</view>
              <input type="number" value="{{buyNum}}"></input>
              <view class="add" bindtap='chengnum' data-type="2">+</view>
          </view>
      </view>
    </view>
    <view class="buttonBtn">
      <view class="celectBtn buybtn" bindtap='closePopu'>确定</view>
    </view>
</van-popup> 